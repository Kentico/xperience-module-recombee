@model DancingGoat.Models.SearchResultPageItemModel

<div class="row search-tile">
    <div class="col-md-4 col-lg-3">
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <a href="@Model.Url" title="@Model.Title">
                <img src="@Model.ImagePath" alt="@Model.Title" title="@Model.Title" class="img-responsive" />
            </a>
        }
    </div>
    <div class="col-md-8 col-lg-9 search-tile-content">
        <h3 class="h4 search-tile-title">
            <a href="@Model.Url">@Model.Title</a>
        </h3>
        <div class="search-tile-badge">@Model.Type</div>
        <div class="search-tile-subtitle">@Model.Date</div>
        <div>@Html.Raw(Model.Content)</div>
    </div>
</div>


