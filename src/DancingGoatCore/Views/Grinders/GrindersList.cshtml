@model IEnumerable<DancingGoat.Models.ProductListItemViewModel>

@if (Model.Any())
{
    foreach (var grinder in Model)
    {
        <!-- 3 products on row for large screen -->
        <div class="col-md-6 col-lg-4">
            @Html.DisplayFor(m => grinder, "ProductListItem")
        </div>
    }
}
else
{
    <span class="ContentLabel">@HtmlLocalizer["No matching products."]</span>
}
